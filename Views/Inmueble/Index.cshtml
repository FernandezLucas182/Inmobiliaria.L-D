@model IEnumerable<InmobiliariaMVC.Models.Inmueble>

@{
    ViewData["Title"] = "Inmuebles";
}

<h2>
    @if (ViewBag.FiltroDisponibles != null)
    {
        @:Inmuebles Disponibles entre @ViewBag.Desde.ToShortDateString() y @ViewBag.Hasta.ToShortDateString()
    }
    else
    {
        @:Listado de Inmuebles
    }
</h2>

<p>
    
    @if (ViewBag.FiltroDisponibles != null)
    {
        <a class="btn btn-secondary" asp-action="Index">Volver al listado principal</a>
    }
</p>

<!-- Filtro por tipo (ya existente) -->
<form method="get" asp-action="Index" class="mb-3">
    <label for="filtro">Filtrar:</label>
    <select name="filtro" id="filtro" asp-items="ViewBag.Filtros"
            class="form-select d-inline w-auto" onchange="this.form.submit()">
    </select>
</form>

<form method="get" asp-action="Index" class="mb-3">
<!-- Filtro por propietario -->
    <label for="id_propietario" class="ms-3">Propietario:</label>
    <select name="id_propietario" id="id_propietario" class="form-select d-inline w-auto" asp-items="ViewBag.Propietarios" onchange="this.form.submit()">
        <option value="">Todos</option>
    </select>
</form>



<!-- Filtro por disponibilidad -->
<form asp-action="InmueblesDisponibles" method="get" class="d-inline">
    <label>Disponibles entre:</label>
    <input type="date" name="desde" required />
    <input type="date" name="hasta" required />
    <button type="submit" class="btn btn-outline-success">Consultar</button>
</form>

<table class="table table-striped mt-3">
    <thead>
        <tr>
            <th>Direcci√≥n</th>
            <th>Uso</th>
            <th>Ambientes</th>
            <th>Precio</th>
            <th>Propietario</th>
            <th>Tipo</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.direccion</td>
            <td>@item.uso</td>
            <td>@item.ambiente</td>
            <td>@item.precio</td>
            <td>@item.Propietario?.apellido @item.Propietario?.nombre</td>
            <td>@item.Tipo.nombre</td>
            <td>
                @if (item.estado == true)
                {
                    <span class="badge bg-success">Activo</span>
                }
                else
                {
                    <span class="badge bg-danger">Inactivo</span>
                }
            </td>
            <td>
                <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@item.id_inmueble">Editar</a>
                <a asp-action="Details" asp-route-id="@item.id_inmueble" class="btn btn-sm btn-info">Detalles</a>
                <form asp-action="ToggleEstado" method="post" style="display:inline">
                    <input type="hidden" name="id" value="@item.id_inmueble" />
                    @if (item.estado == true)
                    {
                        <input type="hidden" name="habilitar" value="false" />
                        <button type="submit" class="btn btn-sm btn-danger">Deshabilitar</button>
                    }
                    else
                    {
                        <input type="hidden" name="habilitar" value="true" />
                        <button type="submit" class="btn btn-sm btn-success">Habilitar</button>
                    }
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>

<div class="text-center">
    <a asp-action="Create" class="btn btn-success btn-create">Nuevo Inmueble</a>
</div>

